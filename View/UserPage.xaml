<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daidokoro.View.UserPage"
             xmlns:model="clr-namespace:Daidokoro.Model"
             Title="UserPage">
    <VerticalStackLayout BackgroundColor="{StaticResource Background}">
        <HorizontalStackLayout HeightRequest="75" BackgroundColor="{StaticResource NavBar}">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="105" Padding="25,15,25,15">
                <ImageButton Source="home.png" Clicked="GoToHomePage" />
                <ImageButton Source="browse.png" Clicked="GoToBrowsePage" />
                <ImageButton Source="user.png" Clicked="GoToUserPage" />
            </HorizontalStackLayout>
        </HorizontalStackLayout>
        <VerticalStackLayout Padding="50">
            <VerticalStackLayout Spacing="20">
                <Border HeightRequest="150" WidthRequest="150" StrokeShape="Ellipse" StrokeThickness="0">
                    <Image Aspect="AspectFill" Source="pp.jpeg" BackgroundColor="{StaticResource Palette1}"/>
                </Border>
                <Label TextColor="{StaticResource Palette2}" FontSize="30" HorizontalTextAlignment="Center" Text="Piroddi"/>
            </VerticalStackLayout>
            <BoxView Margin="15" HeightRequest="2" Color="{StaticResource White}"/>
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <VerticalStackLayout>
                    <Label TextColor="{StaticResource Palette2}" HorizontalTextAlignment="Center" FontSize="20" Text="Likes"/>
                    <Label TextColor="{StaticResource Palette2}" HorizontalTextAlignment="Center" FontSize="30" Text="20"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label TextColor="{StaticResource Palette2}" HorizontalTextAlignment="Center" FontSize="20" Text="Recensioni"/>
                    <Label TextColor="{StaticResource Palette2}" HorizontalTextAlignment="Center" FontSize="30" Text="20"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label TextColor="{StaticResource Palette2}" HorizontalTextAlignment="Center" FontSize="20" Text="Ricette"/>
                    <Label TextColor="{StaticResource Palette2}" HorizontalTextAlignment="Center" FontSize="30" Text="20"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
            <BoxView Margin="15" HeightRequest="2" Color="{StaticResource White}"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>