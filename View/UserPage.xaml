<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daidokoro.View.UserPage"
             xmlns:model="clr-namespace:Daidokoro.Model"
             Title="UserPage">
    <VerticalStackLayout BackgroundColor="{StaticResource Background}">
        <HorizontalStackLayout HeightRequest="75" BackgroundColor="{StaticResource NavBar}">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="105" Padding="25,15,25,15">
                <ImageButton Source="home.png" Clicked="GoToHomePage" />
                <ImageButton Source="browse.png" Clicked="GoToBrowsePage" />
                <ImageButton Source="user.png" Clicked="GoToUserPage" />
            </HorizontalStackLayout>
        </HorizontalStackLayout>
        <VerticalStackLayout>
            <HorizontalStackLayout VerticalOptions="Center" Margin="20">
                <Border HeightRequest="70" WidthRequest="70" StrokeShape="Ellipse"  StrokeThickness="2" Padding="10">
                    <Image Source="user.png"/>
                </Border>
                <VerticalStackLayout Margin="10,0,0,0" HeightRequest="70" VerticalOptions="Center">
                    <Label FontSize="20" Text="Nome"/>
                    <Label FontSize="20" Text="Cognome"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>