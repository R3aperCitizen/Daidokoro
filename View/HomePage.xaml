<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Daidokoro.View.HomePage"
             xmlns:model="clr-namespace:Daidokoro.Model">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout BackgroundColor="{StaticResource Background}">
        <HorizontalStackLayout HeightRequest="75" BackgroundColor="{StaticResource NavBar}">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="105" Padding="25,15,25,15">
                <ImageButton Source="home.png" Clicked="GoToHomePage" />
                <ImageButton Source="browse.png" Clicked="GoToBrowsePage" />
                <ImageButton Source="user.png" Clicked="GoToUserPage" />
            </HorizontalStackLayout>
        </HorizontalStackLayout>
        <Label Text="Ricette più popolari!" FontAttributes="Bold" FontSize="35" HorizontalTextAlignment="Center" TextColor="{StaticResource Palette1}" Padding="10" />
        <ScrollView HeightRequest="834">
            <CollectionView x:Name="MonthRecipe">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Ricetta">
                        <Border StrokeShape="RoundRectangle 10" StrokeThickness="0" Margin="15,15,15,15" HeightRequest="200">
                            <Grid>
                                <Button AutomationId="{Binding Path=IdRicetta}" x:Name="RecipeId" BackgroundColor="Transparent"  />
                                <Image BackgroundColor="{StaticResource Palette1}" Aspect="AspectFill" Source="{Binding Foto, Converter={StaticResource ByteArrayToImageSourceConverter}}" />
                                <StackLayout BackgroundColor="#33000000" />
                                <VerticalStackLayout HorizontalOptions="Center" Padding="20" Spacing="50">
                                    <Label Text="{Binding Nome}" FontAttributes="Bold" FontSize="40" HorizontalTextAlignment="Center" />
                                    <HorizontalStackLayout HorizontalOptions="Center" Padding="10" Spacing="50">
                                        <VerticalStackLayout>
                                            <Label Text="Minuti: " FontAttributes="Bold" FontSize="15" HorizontalTextAlignment="Center" />
                                            <Label Text="{Binding Tempo}" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center" />
                                        </VerticalStackLayout>
                                        <VerticalStackLayout>
                                            <Label Text="Difficoltà: " FontAttributes="Bold" FontSize="15" HorizontalTextAlignment="Center" />
                                            <Label Text="{Binding DifficoltaStella}" FontSize="20" HorizontalTextAlignment="Center" />
                                        </VerticalStackLayout>
                                        <VerticalStackLayout>
                                            <Label Text="Like: " FontAttributes="Bold" FontSize="15" HorizontalTextAlignment="Center" />
                                            <Label Text="{Binding NumeroLike}" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center" />
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
        <!--Button HeightRequest="200" BackgroundColor="{StaticResource Buttons}" TextColor="{StaticResource Text}" FontSize="Large" Text="Dieta del mese" />
        <Button HeightRequest="200" BackgroundColor="{StaticResource Buttons}" TextColor="{StaticResource Text}" FontSize="Large" Text="Collezione del mese"/ -->
    </VerticalStackLayout>

</ContentPage>
