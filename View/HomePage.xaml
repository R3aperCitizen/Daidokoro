<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daidokoro.View.HomePage"
             xmlns:model="clr-namespace:Daidokoro.Model">

    <VerticalStackLayout BackgroundColor="{StaticResource Background}">
        <HorizontalStackLayout HeightRequest="75" BackgroundColor="{StaticResource NavBar}">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="105" Padding="25,15,25,15">
                <ImageButton Source="home.png" Clicked="GoToHomePage" />
                <ImageButton Source="browse.png" Clicked="GoToBrowsePage" />
                <ImageButton Source="user.png" Clicked="GoToUserPage" />
            </HorizontalStackLayout>
        </HorizontalStackLayout>
        <ScrollView HeightRequest="834">
            <VerticalStackLayout Padding="20" Spacing="20">
                <Button HeightRequest="200" BackgroundColor="{StaticResource Buttons}" TextColor="{StaticResource Text}" FontSize="Large" Text="Ricetta del mese" />
                <Button HeightRequest="200" BackgroundColor="{StaticResource Buttons}" TextColor="{StaticResource Text}" FontSize="Large" Text="Dieta del mese" />
                <Button HeightRequest="200" BackgroundColor="{StaticResource Buttons}" TextColor="{StaticResource Text}" FontSize="Large" Text="Collezione del mese" />
                
                <!-- Template ricetta -->
                <Border StrokeShape="RoundRectangle 10" StrokeThickness="0">
                    <HorizontalStackLayout HeightRequest="100" BackgroundColor="{StaticResource Buttons}">
                        <Image Source="example_recipe.jpeg"/>
                        <VerticalStackLayout Padding="10" Spacing="10">
                            <Label FontSize="25" WidthRequest="200" TextColor="{StaticResource Text}" Text="Ratatouille"/>
                            <HorizontalStackLayout WidthRequest="200" Spacing="20">
                                <VerticalStackLayout>
                                    <Label FontSize="10" TextColor="{StaticResource Text}" Text="Difficoltà:"/>
                                    <Label FontSize="15" TextColor="{StaticResource Text}" Text="Estrema"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout>
                                    <Label FontSize="10" TextColor="{StaticResource Text}" Text="Tempo:"/>
                                    <Label FontSize="15" TextColor="{StaticResource Text}" Text="8 ore"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>
                <!-- Fine template ricetta -->
                
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>

</ContentPage>
