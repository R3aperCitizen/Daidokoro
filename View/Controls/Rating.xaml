<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daidokoro.View.Controls.Rating"
             xmlns:controls="clr-namespace:Daidokoro.View.Controls">

    <HorizontalStackLayout Spacing="5" Padding="0,10,0,10">
        <Border StrokeShape="Ellipse" StrokeThickness="0" WidthRequest="35" HeightRequest="35">
            <controls:ImageBlob x:Name="image" BackgroundColor="{StaticResource Palette1}" Aspect="AspectFill"/>
        </Border>
        <VerticalStackLayout VerticalOptions="Center">
            <HorizontalStackLayout Spacing="10">
                <Label x:Name="usernameLabel" FontSize="15" FontAttributes="Bold" TextColor="{StaticResource Palette3}" VerticalTextAlignment="Center" />
                <Label x:Name="dateLabel" FontSize="10" TextColor="{StaticResource Palette3}" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="10">
                <Label x:Name="voteLabel" FontSize="15" VerticalTextAlignment="Center" />
                <Label x:Name="commentLabel" FontSize="14" TextColor="{StaticResource Palette3}" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </HorizontalStackLayout>
</ContentView>
