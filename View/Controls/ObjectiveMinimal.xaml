<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daidokoro.View.Controls.ObjectiveMinimal">
    <Border x:Name="BorderObjective" BackgroundColor="{StaticResource NavBar}" StrokeShape="RoundRectangle 10" HeightRequest="100" >
        <HorizontalStackLayout VerticalOptions="Center" Padding="15" Spacing="20" >
            <Image x:Name="ImageIcon" Source="home.png" VerticalOptions="Center" />
            <VerticalStackLayout VerticalOptions="Center" WidthRequest="150">
                <Label x:Name="LabelName" TextColor="white" FontSize="20" />
                <Label x:Name="LabelDesc" TextColor="white" FontSize="15" />
            </VerticalStackLayout>
            <VerticalStackLayout VerticalOptions="Center">
                <Label x:Name="LabelExp" TextColor="white" FontSize="20" />
                <Label x:Name="LabelData" TextColor="white" FontSize="10" />
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </Border>
</ContentView>