<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daidokoro.View.RicettaPage"
             xmlns:viewmodel="clr-namespace:Daidokoro.ViewModel"
             x:DataType="viewmodel:RicettaPageViewModel"
             Title="RicettaPage">
    <VerticalStackLayout  BackgroundColor="{StaticResource Background}">
        <HorizontalStackLayout HeightRequest="75" BackgroundColor="{StaticResource NavBar}">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="105" Padding="25,15,25,15">
                <ImageButton Source="home.png" Clicked="GoToHomePage" />
                <ImageButton Source="browse.png" Clicked="GoToBrowsePage" />
                <ImageButton Source="user.png" Clicked="GoToUserPage" />
            </HorizontalStackLayout>
        </HorizontalStackLayout>
        <ScrollView HeightRequest="770">
            <VerticalStackLayout Padding="30" Spacing="25" HorizontalOptions="Center">
                <Label x:Name="Nome" Text="Nome" FontSize="30" FontAttributes="Bold" TextColor="{StaticResource Palette2}" />
                <Border StrokeShape="RoundRectangle 10" StrokeThickness="0">
                    <Image Source="example_recipe.png" />
                </Border>
                <Label x:Name="Tags" Text="Tag,tag,tag" FontSize="15" FontAttributes="Bold" TextColor="{StaticResource Palette2}" />
                <Label x:Name="Descrizione" Text="Descrizione" FontSize="25" FontAttributes="Bold" TextColor="{StaticResource Palette2}" />
                <Label x:Name="Ingredienti" Text="Ingredienti" FontSize="25" FontAttributes="Bold" TextColor="{StaticResource Palette2}" />
                <Label x:Name="Passaggi" Text="Passaggi" FontSize="25" FontAttributes="Bold" TextColor="{StaticResource Palette2}" />
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>