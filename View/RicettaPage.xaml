<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daidokoro.View.RicettaPage"
            Title="RicettaPage">
    <VerticalStackLayout  BackgroundColor="{StaticResource Background}">
        <HorizontalStackLayout HeightRequest="75" BackgroundColor="{StaticResource NavBar}">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="105" Padding="25,15,25,15">
                <ImageButton Source="home.png" Clicked="GoToHomePage" />
                <ImageButton Source="browse.png" Clicked="GoToBrowsePage" />
                <ImageButton Source="user.png" Clicked="GoToUserPage" />
            </HorizontalStackLayout>
        </HorizontalStackLayout>
        <ScrollView HeightRequest="770">
            <VerticalStackLayout Padding="30" HorizontalOptions="Center">
                <Label x:Name="Titolo" Text="Susasorella" FontSize="30" FontAttributes="Bold" Padding="10" />
                <Image Source="image/daidokoro.png" HeightRequest="200" Margin="40,0,0,0" ></Image>
                <Label x:Name="Tags" Text="Tag,tag,tag" FontSize="15" FontAttributes="Bold" Padding="10"></Label>
                <Label x:Name="Descrizione" Text="Descrizione" FontSize="25" FontAttributes="Bold" Padding="10"></Label>
                <Label x:Name="Ingredienti" Text="Ingredienti" FontSize="25" FontAttributes="Bold" Padding="10"></Label>
                <Label x:Name="Passaggi" Text="Passaggi" FontSize="25" FontAttributes="Bold" Padding="10" ></Label>
            </VerticalStackLayout>
        </ScrollView>
        </VerticalStackLayout>
</ContentPage>